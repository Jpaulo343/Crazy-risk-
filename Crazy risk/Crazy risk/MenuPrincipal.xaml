<Page x:Class="Crazy_risk.MenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Menú">

    <Grid>
        <!-- Imagen de fondo que mantiene proporciones -->
        <Image Source="Imagenes/imagenesondo.png"
           Stretch="UniformToFill"
           Panel.ZIndex="-1"/>

        <!-- Controles del menú -->
        <StackPanel Width="360" Margin="24" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Crazy Risk" 
                 FontSize="36" 
                 FontFamily="Arial Black" 
                 Margin="0,0,0,24" 
                 HorizontalAlignment="Center" 
                 Foreground="White"/>

            <TextBlock Text="Alias" Margin="0,0,0,4" Foreground="White"/>
            <TextBox x:Name="TxtAlias" Text="Jugador" Margin="0,0,0,12"/>

            <Button x:Name="BtnCrear"
              Content="Crear partida (Servidor)"
              Height="44" FontSize="18"
              Click="BtnCrear_Click"
              Margin="0,0,0,16"/>

            <Separator Margin="0,8,0,8"/>

            <TextBlock Text="IP del servidor" Margin="0,0,0,4" Foreground="White"/>
            <TextBox x:Name="TxtIp" Text="127.0.0.1" Margin="0,0,0,8"/>

            <TextBlock Text="Puerto" Margin="0,0,0,4" Foreground="White"/>
            <TextBox x:Name="TxtPuerto" Text="5000" Margin="0,0,0,12"/>

            <Button x:Name="BtnUnirse"
              Content="Unirse a partida (Cliente)"
              Height="44" FontSize="18"
              Click="BtnUnirse_Click"/>

            <Separator Margin="0,16,0,16"/>

            <Button x:Name="BtnSalir" 
              Content="Salir" 
              Height="40" 
              Click="BtnSalir_Click"/>
        </StackPanel>
    </Grid>
</Page>
